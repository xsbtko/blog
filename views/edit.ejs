<%-include header%>
<form method="post">
    标题:<br>
    <input type="text" name="title" value="<%=posts[0].title%>" disabled="disabled"/><br/>
    标签:<br>
    <input type="text" name="tag1" value="<%=posts[0].tags[0]%>" disabled="disabled"/>
    <input type="text" name="tag2" value="<%=posts[0].tags[1]%>" disabled="disabled"/>
    <input type="text" name="tag3" value="<%=posts[0].tags[2]%>" disabled="disabled"/>
    正文:<br>
    <textarea name="post" rows="20" cols="100"><%-posts[0].post%></textarea><br>
    <input type="submit" value="保存修改">
</form>
<%-include footer%>