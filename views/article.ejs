<%-include header%>
<% posts.forEach(function(post,index){%>
    <p><h2><a href="#"><%=post.title%></a></h2></p>
<% if(user &&(user.name==post.name)){%>
   <p>
       <span><a class="edit" href="/edit/<%=post.title%>/<%=post.name%>">编辑</a></span>
       <span><a class="remove" href="/remove/<%=post.title%>/<%=post.name%>">删除</a></span>
</p>
<%}%>
    <p class="info">
    作者:<a href="#"><%=post.name%></a> |
    日期：<%=post.time.minute%>   
    标签: 
    <%post.tags.forEach(function(tag,index){%>
     <%if(tag){%>
        <a class="tag" href="/tags/<%=tag%>"><%=tag%></a>
    <%}%>
    <%})%>
    </p>
    <p class="text-line"><%-post.post %></p>
    <p class="info">阅读:<%=post.pv%>|评论：<%=post.comments.length%></p>
    <div></div>
<%-include comment%>
 <%})%>
<%-include footer%>